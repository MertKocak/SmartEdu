<%- include("partials/_header") %>
	
    <%- include("partials/_navbar") %>
	
	<div class="all-title-box">
		<div class="container text-center">
			<h1><%= course.title %></h1>
		</div>
	</div>

	<% const monthNames = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]; %>
	
    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-9 blog-post-single">
                    <div class="blog-item">
						<div class="image-blog">
							<img src="/images/blog_single.jpg" alt="" class="img-fluid">
						</div>
						<div class="post-content">

							<% if (user && !(user.courses.includes(course._id))) { %>
								<div class="post-date">
									<form method="post" action="/courses/enroll" style="margin-left: 16px;">
										<input type="hidden" name="course_id" value="<%= course._id %>" >
										<button class="btn btn-lg text-white btn-warning"><span>Enroll</span></button>
									</form>
								</div>	
							<% } %>
							

								<div class="post-date">
									<span class="day"><%= course.date.getDate() %></span>
									<span class="month"><%= monthNames[course.date.getMonth()] %></span>
								</div>
														
							<div class="blog-title">
								<h2><a href="#" title=""><%= course.title %></a></h2>
							</div>
							<div class="blog-desc">
								<%= course.description %></div>							
						</div>
					</div>
					
					<div class="blog-author">
						<div class="author-bio">
							<h3 class="author_name">Course Instructor: <%= course.user.name %></h3>
						</div>
					</div>
					
                </div><!-- end col -->
				<div class="col-lg-3 col-12 right-single">
					<div class="widget-search">
						<div class="site-search-area">
							<form method="get" id="site-searchform" action="/courses">
								<div>
									<input class="input-text form-control" name="search" id="search-k" placeholder="Search..." type="text">
									<button id="searchsubmit" value="Search" type="submit"></button>
								</div>
							</form>
						</div>
					</div>
					<div class="widget-categories">
						<h3 class="widget-title">Categories</h3>
						<ul>
							<% for(let i = 0 ; i < categories.length ; i++) { %>
							<li><a href="/courses?categories=<%= categories[i].slug %>"><%= categories[i].title %></a></li>
							<% } %>
						</ul>
					</div>
				</div>
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->

	<%- include("partials/_footer") %>

</body>
</html>